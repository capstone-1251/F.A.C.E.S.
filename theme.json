{
	"version": 3,
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "dark-blue",
					"color": "#141A38",
					"name": "Dark Blue"
				},
				{
					"slug": "light-blue",
					"color": "#314087",
					"name": "Light Blue"
				},
				{
					"slug": "gray",
					"color": "#EEEEEE",
					"name": "Gray"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				}, 
				{
					"slug": "beige",
					"color": "#141A38",
					"name": "Beige"
				}, 
				{
					"slug": "accent",
					"color": "#FF624D",
					"name": "Accent"
				}
			]
		},
		"layout": {
			"contentSize": "700px",
			"wideSize": "1100px"
		},
		"spacing": {
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"typography": {
			"dropCap": false,
			"fluid": true,
			"fontFamilies": [
				{
					"name": "Open Sans",
					"slug": "open-sans",
					"fontFamily": "\"Open Sans\", sans serif",
					"fontFace": [
						{
							"fontFamily": "Open Sans",
							"fontWeight": "400 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/OpenSans-Regular.ttf"
							]
						},
						{
							"fontFamily": "Open Sans",
							"fontWeight": "400 700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./assets/fonts/OpenSans-Italic.ttf"
							]
						}
					]
				},
				{
					"name": "Abhaya Libre",
					"slug": "abhaya-libre",
					"fontFamily": "\"Abhaya Libre\", serif",
					"fontFace": [
						{
							"fontFamily": "Abhaya Libre",
							"fontWeight": "400 700 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src":[
								"file:./assets/fonts/AbhayaLibre-Regular.ttf"
							]
						}
					]
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "1rem",
					"name": "Small",
					"fluid": false
				},
				{
					"slug": "medium",
					"size": "1.5rem",
					"name": "Medium",
					"fluid": false
				},
				{
					"slug": "large",
					"size": "2rem",
					"name": "Large",
					"fluid": {
						"min": "1.75rem",
						"max": "2rem"
					}
				},
				{
					"slug": "x-large",
					"size": "2.75rem",
					"name": "XL",
					"fluid": {
						"min": "2.5rem",
						"max": "2.75rem"
					}
				},
				{
					"slug": "xx-large",
					"size": "3.75rem",
					"name": "XXL",
					"fluid": {
						"min": "3rem",
						"max": "3.75rem"
					}
				},
				{
					"slug": "xxx-large",
					"size": "4rem",
					"name": "XXXL",
					"fluid": {
						"min": "3.25rem",
						"max": "4rem"
					}
				}
			]
		},
		"useRootPaddingAwareAlignments": true
	},
	"styles": {
		"blocks": {
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--dark-blue)"
				},
				"typography": {
					"fontWeight": "600",
					"fontSize": "1.75rem"
				}
			},
			"core/post-title": {
				"color": {
					"text": "var(--wp--preset--color--dark-blue)"
				}, 
				"typography": {
					"fontWeight": "700",
					"fontSize": "2.5rem"
				}
			},
			"core/code": {
				"color": {
					"text": ""
				}
			},
			"core/navigation": {
				"css": "",
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--white)"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--white)",
								"background": "var(--wp--preset--color--accent)"
							},
							"typography": {
								"textDecoration": "none"
							}
						},
						":focus": {
							"color": {
								"text": "var(--wp--preset--color--white)",
								"background": "var(--wp--preset--color--accent)"
							}
						},
						":active": {
							"color": {
								"text": "var(--wp--preset--color--white)",
								"background": "var(--wp--preset--color--accent)"
							}
						},
						"typography": {
							"fontFamily": "\"Open Sans\", sans serif",
							"fontSize": "1rem"
						}
					}
				}
			},
			"core/site-header":{
				"color": {
					"background": "var(--wp--preset-color-light-blue)"
				}
			},
			"core/post-author-name": {
				"typography": {
					"fontSize": ""
				}
			},
			"core/post-content": {
				"spacing": {
					"margin": {
						"top": "",
						"bottom": ""
					}
				}
			},
			"core/post-excerpt": {
				"elements": {
					"link": {
						"typography": {
							"fontSize": ""
						}
					}
				}
			},
			"core/post-featured-image": {
				"spacing": {
					"margin": {
						"bottom": ""
					}
				}
			},
			"core/post-template": {
				"spacing": {
					"padding": {
						"top": "",
						"bottom": ""
					}
				}
			},
			"core/post-terms": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"core/search": {
				"css": ".wp-block-search__button-inside .wp-block-search__inside-wrapper{border: none;}",
				"typography": {
					"lineHeight": "1"
				}
			},
			"core/paragraph": {
				"typography": {
					"fontFamily": "\"Open Sans\", sans serif",
					"fontSize": "1rem"
				},
				"color": {
					"text": "var(--wp--preset--color--dark-blue)"
				}
			},
			"core/list": {
				"typography": {
					"fontFamily": "\"Open Sans\", sans serif",
					"fontSize": "1rem"
				},
				"color": {
					"text": "var(--wp--preset--color--dark-blue)"
				}
			}
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "1rem",
						"bottom": "1rem",
						"left": "1rem"
					}
				},
				"color": {
					"background": "",
					"text": ""
				},
				"typography": {
					"fontSize": "",
					"fontWeight": "700"
				},
				"shadow": "",
				":hover": {
					"border": {
						"color": ""
					}
				}
			},
			"caption": {
				"color": {
					"text": ""
				}
			},
			"cite": {
				"color": {
					"text": ""
				}
			},
			"link": {
				"color": {
					"text": ""
				},
				":hover": {
					"color": {
						"text": ""
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": ""
					}
				},
				":active": {
					"color": {
						"text": ""
					}
				}
			}
		},
		"spacing": {
			"padding": {
				"right": "",
				"left": ""
			}
		},
		"typography": {
			"fontSize": "",
			"fontFamily": "",
			"lineHeight": "1.7"
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		}
	],
	"customTemplates": [
		{
			"name": "no-title",
			"title": "No title",
			"postTypes": [ "post","page" ]
		}
	]
}
